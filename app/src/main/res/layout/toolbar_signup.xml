<merge xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.appcompat.widget.Toolbar

        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="#0C0101"
        android:theme="@style/Theme.AppCompat.Light.Dialog"
        app:layout_scrollFlags="scroll|exitUntilCollapsed">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="125dp"
                android:layout_height="36dp"
                android:layout_marginStart="16dp"
                android:padding="5dp"
                app:layout_constraintBottom_toBottomOf="@+id/back_arrowtopic"
                app:layout_constraintStart_toEndOf="@+id/back_arrowtopic"
                app:layout_constraintTop_toTopOf="@+id/back_arrowtopic"
                app:srcCompat="@drawable/ic_netflix_icontext" />

            <ImageView
                android:id="@+id/back_arrowtopic"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:src="@drawable/back_arrow"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </ImageView>

            <TextView
                android:id="@+id/topic_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:gravity="end"
                android:text="Help"
                android:textColor="#ffffff"
                android:textSize="15dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/back_arrowtopic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/back_arrowtopic"
                app:layout_constraintVertical_bias="0.6" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.appcompat.widget.Toolbar>


</merge>
